<div class="button">
  <button {{action 'newGame'}}>New Game</button>
</div>
<section id="0">
</section>
<section class="frog-group">
  {{#if redOn}}
  <div class="red color">
    <img src="img/frog-sing-red.png" alt="red frog" />
  </div>
  {{else}}
  <div {{action 'guessColor' "red"}} {{action 'click' "red"}} class="red color off">
    <img src="img/frog-resting-red.png" alt="red frog" />
  </div>
  {{/if}}
  {{#if blueOn}}
  <div class="blue color">
    <img src="img/frog-sing-blue.png" alt="blue frog" />
  </div>
  {{else}}
  <div {{action 'guessColor' "blue"}} {{action 'click' "blue"}} class="blue color off">
    <img src="img/frog-resting-blue.png" alt="blue frog" />
  </div>
  {{/if}}
  {{#if greenOn}}
  <div class="green color">
    <img src="img/frog-sing.png" alt="green frog" />
  </div>
  {{else}}
  <div {{action 'guessColor' "green"}} {{action 'click' "green"}} class="green color off">
    <img src="img/frog-resting.png" alt="green frog" />
  </div>
  {{/if}}
  {{#if yellowOn}}
  <div class="yellow color">
    <img src="img/frog-sing-yellow.png" alt="yellow frog" />
  </div>
  {{else}}
  <div {{action 'guessColor' "yellow"}} {{action 'click' "yellow"}} class="yellow color off">
    <img src="img/frog-resting-yellow.png" alt="yellow frog" />

  </div>
  {{/if}}
</section>
